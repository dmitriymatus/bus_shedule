@model MvcApplication.Models.LoginViewModel
@{
    ViewBag.Title = "Login";
}

        @using (Html.BeginForm("Login","Account",FormMethod.Post,new {@class="form-signin"}))
        {
            @Html.ValidationSummary()
            <div class="form-group">
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder="Имя пользователя" })
            </div>
            <div class="form-group">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder="Пароль" })
            </div>
            <input type="submit" value="Войти" class="btn btn-lg btn-primary btn-block" style="padding:5px;" />
        }


@section scripts
{
@Scripts.Render("~/bundles/jqueryval")
@Scripts.Render("~/Scripts/bootstrap.js")
}
